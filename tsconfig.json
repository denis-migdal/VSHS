{
    "include": ["src", "tests"],
    "exclude": ["tests", "VSHS.ts"],
    "compilerOptions": {
        "outDir": "./build/TS/",
        "paths": {
            "@VSHS/*": ["./src/*"],
            "@LISS/*": ["./libs/LISS/V3/*"]
        },
        "sourceMap": true,
        "alwaysStrict": true,

        "strict": true,
        "noErrorTruncation": true,
        "exactOptionalPropertyTypes": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,

        "module": "esnext",
        "target": "esnext",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "incremental": true,
    }
}